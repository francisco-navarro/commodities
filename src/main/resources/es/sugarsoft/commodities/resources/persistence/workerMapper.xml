<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="es.sugarsoft.commodities.resources.persistence.WorkerMapper">


	<select id="getAllSectionWorkers" resultType="es.sugarsoft.commodities.workers.resources.WorkerResource">
		select worker_id as workerId,class,description,params,cron_expression as cronExpression
			from WORKER w, WORKER_SECTION ws 
			where w.ID=ws.WORKER_ID
	</select>
	
	<select id="count" resultType="java.lang.Long">
		select count(*) from WORKER
	</select>
	
</mapper>